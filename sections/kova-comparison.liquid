{{ 'kova-comparison.css' | asset_url | stylesheet_tag }}

<div class="kova-comparison-section">
  <div class="page-width">
    <div class="kova-comp-grid">
      <div class="kova-comp-text-col">
        <h2 class="kova-comp-heading">{{ section.settings.heading }}</h2>
        <div class="kova-comp-features">
          {% for block in section.blocks %}
            <div class="kova-comp-feature" {{ block.shopify_attributes }}>
              <div class="kova-comp-icon-wrapper">
                {% if block.settings.icon != blank %}
                  <span class="kova-comp-icon">{{ block.settings.icon }}</span>
                {% elsif block.settings.svg_icon != blank %}
                  <div class="kova-comp-svg">{{ block.settings.svg_icon }}</div>
                {% else %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><polyline points="20 6 9 17 4 12"/></svg>
                {% endif %}
              </div>
              <div class="kova-comp-feature-content">
                <h3 class="kova-comp-feature-title">{{ block.settings.title }}</h3>
                {% if block.settings.description != blank %}
                  <p class="kova-comp-feature-desc">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="kova-comp-media-col">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.heading }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="kova-comp-image"
          >
        {% else %}
          <img src="https://images.unsplash.com/photo-1582582621959-48d27397dc69?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Comparison Mattress Topper" width="800" height="800" class="kova-comp-image" />
        {% endif %}
      </div>
    </div>
  </div>
</div>

