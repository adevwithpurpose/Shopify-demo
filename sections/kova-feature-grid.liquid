{{ 'kova-feature-grid.css' | asset_url | stylesheet_tag }}

<div class="kova-feature-grid-section">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="kova-fg-header">
        {% if section.settings.subheading != blank %}
          <p class="kova-fg-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        <h2 class="kova-fg-heading">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="kova-fg-grid kova-fg-grid--{{ section.settings.columns }}">
      {% for block in section.blocks %}
        <div class="kova-fg-card" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="kova-fg-card-image">
              <img
                src="{{ block.settings.image | image_url: width: 100 }}"
                alt="{{ block.settings.title }}"
                width="60"
                height="60"
                loading="lazy"
              >
            </div>
          {% elsif block.settings.icon != blank %}
            <div class="kova-fg-card-icon">{{ block.settings.icon }}</div>
          {% endif %}
          <h3 class="kova-fg-card-title">{{ block.settings.title }}</h3>
          {% if block.settings.text != blank %}
            <div class="kova-fg-card-text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

