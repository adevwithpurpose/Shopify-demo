{{ 'velo-testimonials.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="velo-testimonials-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="velo-testimonials-header velo-reveal">
        <h2 class="velo-testimonials-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <div class="velo-testimonials-subheading">{{ section.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="velo-testimonials-grid">
      {% for block in section.blocks %}
        <div class="velo-testimonial-card velo-card-hover velo-reveal velo-reveal-delay-{{ forloop.index | at_most: 4 }}" {{ block.shopify_attributes }}>
          <div class="velo-testimonial-stars">
            {% for i in (1..5) %}
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            {% endfor %}
          </div>
          <div class="velo-testimonial-quote">"{{ block.settings.quote }}"</div>
          <div class="velo-testimonial-author">
            <div class="velo-testimonial-avatar">
              {{ block.settings.author_name | slice: 0 | upcase }}
            </div>
            <div class="velo-testimonial-info">
              <span class="velo-testimonial-name">{{ block.settings.author_name }}</span>
              <span class="velo-testimonial-verified">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                Verified Buyer
              </span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "VELO Testimonials",
  "tag": "section",
  "class": "velo-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Over 10,000+ people have upgraded their work setup with VELO."
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The VELO Chair changed how I work. I no longer feel stiff after a 10-hour shift."
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Sarah J."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VELO Testimonials",
      "blocks": [
        { "type": "testimonial", "settings": { "author_name": "Sarah J.", "quote": "The VELO Chair changed how I work. I no longer feel stiff after a 10-hour shift." } },
        { "type": "testimonial", "settings": { "author_name": "Michael R.", "quote": "I've tried every ergonomic chair out there. This is the first one that actually lets me move." } },
        { "type": "testimonial", "settings": { "author_name": "Emily L.", "quote": "Perfect for my ADHD! Being able to sit cross-legged while working is a game-changer." } }
      ]
    }
  ]
}
{% endschema %}
