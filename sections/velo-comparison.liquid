            { "value": "none", "label": "None" },
            { "value": "truck", "label": "Truck" },
            { "value": "package", "label": "Package" },
            { "value": "refresh", "label": "Returns / Refresh" },
            { "value": "shield", "label": "Shield / Guarantee" },
            { "value": "star", "label": "Star" },
            { "value": "thermometer", "label": "Temperature" },
            { "value": "bandage", "label": "Relief / Bandage" },
            { "value": "bed", "label": "Bed / Sleep" },
            { "value": "palette", "label": "Palette / Creative" },
            { "value": "sparkles", "label": "Sparkles / New" },
            { "value": "move", "label": "Move / Arrows" },
            { "value": "brain", "label": "Brain / Focus" },
            { "value": "monitor", "label": "Monitor / Desk" },
            { "value": "check", "label": "Check" },
            { "value": "lock", "label": "Lock / Secure" },
            { "value": "gift", "label": "Gift" },
            { "value": "mouse", "label": "Mouse Pad" },
            { "value": "mat", "label": "Chair Mat" },
            { "value": "clock", "label": "Clock / Speed" },
            { "value": "sliders", "label": "Sliders / Settings" }
          ],
          "default": "check"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Allows for Movement"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Move naturally without thinking about it"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VELO Feature List",
      "blocks": [
        { "type": "feature", "settings": { "svg_icon": "<svg viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"1.5\"><path d=\"M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7\"/></svg>", "title": "Allows for Movement", "description": "Move naturally without thinking about it" } },
        { "type": "feature", "settings": { "svg_icon": "<svg viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"1.5\"><path d=\"M20 6L9 17l-5-5\"/></svg>", "title": "Effortless Posture", "description": "Supports alignment as you shift positions" } },
        { "type": "feature", "settings": { "svg_icon": "<svg viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"1.5\"><circle cx=\"12\" cy=\"12\" r=\"10\"/><polyline points=\"12 6 12 12 16 14\"/></svg>", "title": "All-Day Comfort", "description": "Stays comfortable longer - without feeling \"stuck\"" } },
        { "type": "feature", "settings": { "svg_icon": "<svg viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"1.5\"><path d=\"M4 10V6a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v4M4 14v4a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-4M12 4v16M2 12h20\"/></svg>", "title": "Fits Every Body & Desk", "description": "Adjusts to any height and desk setup" } }
      ]
    }
  ]
}
