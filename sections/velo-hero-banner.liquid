{{ 'velo-hero-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="velo-hero-banner section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="velo-banner-media velo-reveal">
      {% if section.settings.video_url != blank %}
        <video autoplay muted loop playsinline poster="{{ section.settings.image | image_url: width: 800 }}">
          <source src="{{ section.settings.video_url }}" type="video/mp4">
        </video>
      {% elsif section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.heading | escape }}"
          loading="lazy"
          width="800"
          height="auto"
        >
      {% else %}
        <img src="https://images.unsplash.com/photo-1505693314120-0d443867891c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Demo Image" width="800" height="auto" />
      {% endif %}
    </div>

    <div class="velo-banner-content velo-reveal velo-reveal-delay-1">
      {% if section.settings.heading_bold != blank %}
        <h2 class="velo-banner-heading">
          <span class="velo-banner-light">{{ section.settings.heading_light }}</span>
          <span class="velo-banner-bold">{{ section.settings.heading_bold }}</span>
          {% if section.settings.heading_italic != blank %}
            <em class="velo-banner-italic">{{ section.settings.heading_italic }}</em>
          {% endif %}
        </h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <div class="velo-banner-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}

      <div class="velo-banner-tags">
        {% for block in section.blocks %}
          <span class="velo-banner-tag velo-reveal velo-reveal-delay-{{ forloop.index | plus: 1 | at_most: 4 }}" {{ block.shopify_attributes }}>
            {{ block.settings.tag_text }}
          </span>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "VELO Hero Banner",
  "tag": "section",
  "class": "velo-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Fallback Image"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL (MP4)",
      "info": "Upload to Shopify Files and paste URL here"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading_light",
      "label": "Heading (light)",
      "default": "Sitting Still vs"
    },
    {
      "type": "text",
      "id": "heading_bold",
      "label": "Heading (bold)",
      "default": "Sitting"
    },
    {
      "type": "text",
      "id": "heading_italic",
      "label": "Heading (italic)",
      "default": "Smart"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "The VELO Chair supports your natural need to move and adjust, keeping you focused and preventing fatigue."
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "tag",
      "name": "Benefit Tag",
      "settings": [
        {
          "type": "text",
          "id": "tag_text",
          "label": "Tag Text",
          "default": "Move Without Limits"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VELO Hero Banner",
      "blocks": [
        { "type": "tag", "settings": { "tag_text": "Move Without Limits" } },
        { "type": "tag", "settings": { "tag_text": "Stay Comfortable All Day" } },
        { "type": "tag", "settings": { "tag_text": "Less Fatigue, More Focus" } },
        { "type": "tag", "settings": { "tag_text": "Support That Adapts to You" } },
        { "type": "tag", "settings": { "tag_text": "Comfort That Lasts Longer" } },
        { "type": "tag", "settings": { "tag_text": "Good Posture, No Effort" } }
      ]
    }
  ]
}
{% endschema %}
