<div class="rich-text section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="rich-text__wrapper rich-text__wrapper--center">
      <div class="rich-text__blocks center">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2 class="velo-rich-heading velo-reveal {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading_light }}
                <strong>{{ block.settings.heading_bold }}</strong>
              </h2>
            {%- when 'text' -%}
              <div class="velo-rich-text velo-reveal {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<style>
  .velo-rich-heading {
    font-family: 'Jost', sans-serif !important;
    font-size: 5.2rem;
    font-weight: 300 !important;
    line-height: 1.1;
    color: var(--velo-navy, #122442);
    margin-bottom: 2rem;
    letter-spacing: -0.01em;
  }
  .velo-rich-heading strong {
    font-weight: 800 !important;
    display: inline;
  }
  .velo-rich-text {
    font-size: 1.6rem;
    color: #666;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.5;
  }
  @media screen and (max-width: 749px) {
    .velo-rich-heading {
      font-size: 3.2rem;
    }
  }
</style>

{% schema %}
{
  "name": "VELO Rich Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading_light",
          "label": "Heading (light)",
          "default": "One Chair ="
        },
        {
          "type": "text",
          "id": "heading_bold",
          "label": "Heading (bold)",
          "default": "Endless Positions"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>KÃ–VA effortlessly adapts to your changing postures, improves comfort and healthy sitting throughout your day</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VELO Rich Text",
      "blocks": [
        { "type": "heading" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}
