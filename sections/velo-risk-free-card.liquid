{{ 'velo-risk-free-card.css' | asset_url | stylesheet_tag }}

<div class="velo-risk-card-section">
  <div class="page-width">
    <div class="velo-risk-card velo-reveal">
      <div class="velo-risk-icon-floating">
        {% render 'velo-icons', icon: section.settings.main_icon %}
      </div>
      
      <h2 class="velo-risk-heading">{{ section.settings.heading }}</h2>
      <p class="velo-risk-subheading">{{ section.settings.subheading }}</p>

      <div class="velo-risk-badges">
        {% for block in section.blocks %}
          <div class="velo-risk-badge" {{ block.shopify_attributes }}>
            <span class="velo-risk-badge-icon">
              {% render 'velo-icons', icon: block.settings.icon %}
            </span>
            <span>{{ block.settings.title }}</span>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "VELO Risk Free Card",
  "tag": "section",
  "class": "velo-section",
  "settings": [
    {
      "type": "select",
      "id": "main_icon",
      "label": "Floating Icon",
      "options": [
        { "value": "shield", "label": "Shield" },
        { "value": "check", "label": "Check" },
        { "value": "refresh", "label": "Refresh" },
        { "value": "lock", "label": "Lock" }
      ],
      "default": "shield"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "90-Day Risk-Free Trial"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "If it doesn't improve your comfort and focus, return it. No questions asked."
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Trust Badge",
      "limit": 3,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "check", "label": "Check" },
            { "value": "shield", "label": "Shield" },
            { "value": "refresh", "label": "Refresh" },
            { "value": "gift", "label": "Gift" }
          ],
          "default": "check"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Text",
          "default": "3-Year Warranty"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VELO Risk Free Card",
      "blocks": [
        { "type": "badge", "settings": { "title": "3-Year Warranty" } },
        { "type": "badge", "settings": { "title": "Free & Easy Returns" } },
        { "type": "badge", "settings": { "title": "Money-Back Guarantee" } }
      ]
    }
  ]
}
{% endschema %}
