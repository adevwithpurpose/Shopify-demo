{{ 'kova-trust-strip.css' | asset_url | stylesheet_tag }}

<div class="kova-trust-section">
  <div class="page-width">
    <div class="kova-trust-grid">
      {% for block in section.blocks %}
        <div class="kova-trust-item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <span class="kova-trust-item-icon">{{ block.settings.icon }}</span>
          {% endif %}
          <div class="kova-trust-item-content">
            <strong class="kova-trust-item-title">{{ block.settings.title }}</strong>
            {% if block.settings.subtitle != blank %}
              <span class="kova-trust-item-subtitle">{{ block.settings.subtitle }}</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

