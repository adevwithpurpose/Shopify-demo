{{ 'velo-body-built.css' | asset_url | stylesheet_tag }}

<div class="velo-body-built-section">
  <div class="page-width">
    <div class="velo-bb-header velo-reveal">
      <h2 class="velo-bb-heading">
        {{ section.settings.heading_prefix | default: 'Built for How Your' }}<br>
        <strong>{{ section.settings.heading_bold | default: 'Body Actually Works' }}</strong>
      </h2>
      {% if section.settings.subheading != blank %}
        <p class="velo-bb-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="velo-bb-grid">
      <div class="velo-bb-list-col">
        <div class="velo-bb-list">
          {% for block in section.blocks %}
            <div class="velo-bb-item velo-reveal velo-reveal-delay-{{ forloop.index | at_most: 4 }}" {{ block.shopify_attributes }}>
              <div class="velo-bb-icon-wrap">
                {% render 'velo-icons', icon: block.settings.icon %}
              </div>
              <div class="velo-bb-content">
                <h3 class="velo-bb-item-title">{{ block.settings.title }}</h3>
                {% if block.settings.description != blank %}
                  <p class="velo-bb-item-desc">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="velo-bb-image-col velo-reveal">
        {% if section.settings.side_image != blank %}
          <img
            src="{{ section.settings.side_image | image_url: width: 800 }}"
            alt="{{ section.settings.side_image.alt | default: 'VELO Life' }}"
            loading="lazy"
            width="800"
          >
        {% else %}
          <img
            src="https://images.unsplash.com/photo-1631679706909-1844bbd07221?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
            alt="Person sitting in VELO chair"
            loading="lazy"
            width="800"
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "VELO Body Built",
  "tag": "section",
  "class": "velo-section",
  "settings": [
    {
      "type": "text",
      "id": "heading_prefix",
      "label": "Heading (light part)",
      "default": "Built for How Your"
    },
    {
      "type": "text",
      "id": "heading_bold",
      "label": "Heading (bold part)",
      "default": "Body Actually Works"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Supporting your natural movement"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Side Image"
    }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Point",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "none", "label": "None" },
            { "value": "truck", "label": "Truck" },
            { "value": "package", "label": "Package" },
            { "value": "refresh", "label": "Returns / Refresh" },
            { "value": "shield", "label": "Shield / Guarantee" },
            { "value": "star", "label": "Star" },
            { "value": "thermometer", "label": "Temperature" },
            { "value": "bandage", "label": "Relief / Bandage" },
            { "value": "bed", "label": "Bed / Sleep" },
            { "value": "palette", "label": "Palette / Creative" },
            { "value": "sparkles", "label": "Sparkles / New" },
            { "value": "move", "label": "Move / Arrows" },
            { "value": "brain", "label": "Brain / Focus" },
            { "value": "monitor", "label": "Monitor / Desk" },
            { "value": "check", "label": "Check" },
            { "value": "lock", "label": "Lock / Secure" },
            { "value": "gift", "label": "Gift" },
            { "value": "mouse", "label": "Mouse Pad" },
            { "value": "mat", "label": "Chair Mat" },
            { "value": "clock", "label": "Clock / Speed" },
            { "value": "sliders", "label": "Sliders / Settings" }
          ],
          "default": "move"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Allows for Movement"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Move naturally without thinking about it"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VELO Body Built",
      "blocks": [
        { "type": "point", "settings": { "icon": "move", "title": "Allows for Movement", "description": "Move naturally without thinking about it" } },
        { "type": "point", "settings": { "icon": "check", "title": "Effortless Posture", "description": "Supports alignment as you shift positions" } },
        { "type": "point", "settings": { "icon": "clock", "title": "All-Day Comfort", "description": "Stays comfortable longer - without feeling \"stuck\"" } },
        { "type": "point", "settings": { "icon": "sliders", "title": "Fits Every Body & Desk", "description": "Adjusts to any height and desk setup" } }
      ]
    }
  ]
}
{% endschema %}
